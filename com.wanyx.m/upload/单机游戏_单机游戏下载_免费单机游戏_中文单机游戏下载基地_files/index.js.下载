(function() {
	box2 = document.getElementById('zt');
	if(!box2)
		return;
	box2_ta = getByClass(box2,'ta')[0].getElementsByTagName('li'),
	aArea2_right_cont = getByClass(box2,'hidden');
add_show(box2_ta, aArea2_right_cont);
})();
(function() {
	box3 = document.getElementById('message');
	if(!box3)
		return;
	box3_tab = getByClass(box3,'tab')[0].getElementsByTagName('li'),
	aArea3_right_cont = getByClass(box3,'hidden');
add_show(box3_tab, aArea3_right_cont);
})();
